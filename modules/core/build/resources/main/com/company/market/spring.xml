<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context">

    <!-- Annotation-based beans -->
    <context:component-scan base-package="com.company.market"/>
    <bean id="market_MBeanExporter" lazy-init="false"
          class="com.haulmont.cuba.core.sys.jmx.MBeanExporter">
        <property name="beans">
            <map>
                <entry key="${cuba.webContextName}.market:type=ProducerMethod"
                       value-ref="market_ProducerMethod"/>
                <entry key="${cuba.webContextName}.market:type=ShopMethod"
                       value-ref="market_ShopMethod"/>
                <entry key="${cuba.webContextName}.market:type=NetworkMethod"
                       value-ref="market_NetworkMethod"/>
            </map>
        </property>
    </bean>

</beans>
