<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.market.web.screens.commercialnetwork">
    <data>
        <instance id="commercialNetworkDc"
                  class="com.company.market.entity.CommercialNetwork"
                  view="_local">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="commercialNetworkDc">
            <column width="250px">
                <textField id="nameField" property="name"/>
                <textField id="fullNameField" property="fullName" caption="msg://fullName"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
